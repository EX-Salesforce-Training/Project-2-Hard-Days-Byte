<aura:component >
    <aura:attribute name="userInput" type="String" />
    
    <div id="container">
        <table>
            <tr>
                <td colspan="2" id="chatArea">
                    <lightning:textarea aura:id="chatTextbox" label="Answers appear here!" disabled="True" />
                </td>
            </tr>
            <tr>
                <td width="80%"><lightning:input name="Chatbox" value="{!v.userInput}" placeholder="Insert inquiry..." /></td>
                <td width="20%" class="buttonTD"><lightning:button name="Submit" variant="Brand" label="Submit" /></td>
            </tr>
        </table>
    </div>
</aura:component>